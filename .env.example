# Berqenas Platform Environment Variables

# FastAPI Settings
DEBUG=False
SECRET_KEY=generate_a_very_long_random_string_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# PostgreSQL Configuration
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_USER=postgres
POSTGRES_DB=berqenas
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:changeme_secure_password@localhost:5432/berqenas

# Redis Configuration (for Sync & Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Security & CORS
ALLOWED_ORIGINS=http://localhost:5173,https://panel.berqenas.com

# WireGuard Configuration
WIREGUARD_CONFIG_DIR=/etc/wireguard
WIREGUARD_INTERFACE=wg0

# Backup Configuration
B2_BUCKET=berqenas-backups
S3_BUCKET=berqenas-backups

# Payment Gateway (Optional)
STRIPE_API_KEY=sk_test_...
IYZICO_API_KEY=your_key
