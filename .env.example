# Berqenas Platform Environment Variables

# PostgreSQL Configuration
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_USER=postgres
POSTGRES_DB=berqenas
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# API Configuration
API_SECRET_KEY=your_secret_key_change_in_production
API_DEBUG=false
CORS_ORIGINS=*

# Grafana Configuration
GRAFANA_PASSWORD=admin

# Backup Configuration
B2_BUCKET=berqenas-backups
B2_APPLICATION_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key

# S3 Configuration (alternative to B2)
S3_BUCKET=berqenas-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Payment Configuration
STRIPE_API_KEY=sk_test_your_stripe_key
IYZICO_API_KEY=your_iyzico_key
IYZICO_SECRET_KEY=your_iyzico_secret
